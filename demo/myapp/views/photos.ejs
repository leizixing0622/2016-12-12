<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>
			Demo
		</title>
		<link rel="stylesheet" href="/stylesheets/style.css">
		<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
		<link rel="stylesheet" href="/stylesheets/font-awesome.css">
		<link rel="stylesheet" href="/stylesheets/dataTables.bootstrap.css">
		<link rel="stylesheet" href="/stylesheets/jquery-confirm.css">
		<script src="/javascripts/jquery-1.7.2.min.js"></script>
		<script src="/javascripts/bootstrap.min.js"></script>
		<script src="/javascripts/jquery.dataTables.js"></script>
		<script src="/javascripts/dataTables.bootstrap.js"></script>
		<script src="/javascripts/jquery.validate.min.js"></script>
		<script src="/javascripts/messages_zh.js"></script>
		<script src="/javascripts/jquery-confirm.js"></script>
	</head>
	<body>
		<div id="demo">
			<div class="btn-group" style="margin-bottom: 20px;">
			      <button type="button" class="btn btn-default" id="photoAdd"><i class="fa fa-plus"></i>新增</button>
			      <button type="button" class="btn btn-default" id="photoEdit"><i class="fa fa-pencil"></i>编辑</button>
			      <button type="button" class="btn btn-default" id="photoView"><i class="fa fa-search"></i>查看</button>
			      <button type="button" class="btn btn-default"><i class="fa fa-trash"></i>删除</button>
			</div>
			<table cellpadding="0" cellspacing="0" border="0" class="table table-bordered table-striped table-hover" id="example" >
				<thead>
					<tr>
						<th></th>
						<th>
							姓名
						</th>
						<th>
							性别
						</th>
						<th>
							年龄
						</th>
						<th>
							照片
						</th>
					</tr>
				</thead>
			</table>
		</div>
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      
		    </div>
		  </div>
		</div>
	</body>
	<script>
	var exampleTable;
		$(document).ready(function() {
			exampleTable = $('#example').DataTable({
				"ajax": "/photos/getAll",
				paging: true,//分页
			             ordering: true,//是否启用排序
			             searching: true,//搜索
				"language": {
					"lengthMenu": "每页 _MENU_ 条记录",
					"zeroRecords": "没有找到记录",
					"info": "第 _PAGE_ 页 ( 总共 _PAGES_ 页 )",
					"infoEmpty": "无记录",
					"infoFiltered": "(从 _MAX_ 条记录过滤)",
					paginate: { //分页的样式内容。
						previous: "上一页",
						next: "下一页",
						first: "第一页",
						last: "最后"
					},
				},
				"aoColumns": [{
					'data': '_id'
				},
				{
					'data': 'name'
				},
				{
					'data': 'sex'
				},
				{
					'data': 'age'
				},
				{
					'data': 'path'
				}
				],
				"columnDefs" : [ {
						"targets" : [ 0 ],
						"visible" : false, 	// 是否显示
						"searchable" : false// 是否参与搜索
					} ]
			});
				$('#example tbody').on( 'click', 'tr', function () {
				        $(this).toggleClass('selected');
				    } );	

		});
	</script>
	<script src="/javascripts/photos.js"></script>
</html>