<div class="modal-header" style="padding-bottom:0px;">
	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
   	 <h4 class="modal-title" id="myModalLabel">编辑</h4>
  </div>
  <div class="modal-body">
  
  <form enctype="multipart/form-data" method="post" class="bs-example-form" id="imagelist">
  <input type="hidden" value=" <%=_id%>" name="_id"> 	
  	    <div class="input-group">
	      <span class="input-group-addon">姓名</span>
	      <input type="text" name="name" class="form-control" required value="<%=photo.name%>">
	    </div>
	    <div class="input-group">
	      <span class="input-group-addon">性别</span>
	      <input type="text" name="sex" class="form-control" required value="<%=photo.sex%>">
	    </div>
	    <div class="input-group">
	      <span class="input-group-addon">年龄</span>
	      <input type="text" name="age" class="form-control" required value="<%=photo.age%>">
	    </div>
	    <div class="row">
		      
		      <div class="col-md-4 col-md-offset-2">
		        <a href="#" class="thumbnail">
		          <img data-src="holder.js/100%x180" alt="100%x180" src="<%=photo.path%>" data-holder-rendered="true" style="height: 180px; width: 100%; display: block;">
		        </a>
		      </div>
		      <div class="col-md-4">
		        <a href="#" class="thumbnail">
		          <img data-src="" alt="" src="" data-holder-rendered="true" style="height: 180px; width: 100%; display: block;" id="nowImage">
		        </a>
		      </div>
		 		      
	    </div>
	    <div class="input-group">
	      <span class="input-group-addon">照片</span>
	      <input type="file" name="image" class="form-control" required value="<%=photo.path%>" id="image">
	    </div>
  	<input type="button" value="上传文件" onclick="Req_ajax()" >
  	<p id="status"></p>
  	<p id="preview"></p>
  </form>
  </div>
  <div class="modal-footer">
   
  </div>
<script src="/javascripts/photos/edit.js"></script>